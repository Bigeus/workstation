        android:columnCount="2"
        android:rowCount="3"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/lofi1Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="ðŸŽµ Lofi Radio"
            android:textSize="12sp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/lofi2Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="ðŸŽ¶ ChillHop"
            android:textSize="12sp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/lofi3Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="ðŸŽ¼ ILove Chill"
            android:textSize="12sp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/lofi4Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="ðŸŽ¹ Chill Beats"
            android:textSize="12sp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/lofi5Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="ðŸŽ¤ Hip Hop Lofi"
            android:textSize="12sp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />

    </GridLayout>

    <!-- BotÃ£o Adicionar Task -->
    <Button
        android:id="@+id/addTaskButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âž• Adicionar Task"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/teal_200"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"
        android:onClick="showAddTaskModal" />

    <!-- Lista de Tasks -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“‹ Suas Tasks:"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTasks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_background_semi_transparent" />

</LinearLayout>