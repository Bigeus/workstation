            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/aldrich" />

    </LinearLayout>

    <!-- Controles de mÃºsica MELHORADOS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_background_dark"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <!-- Linha superior: Play/Pause e Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/playPauseButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_play"
                android:background="@drawable/circular_button"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/currentVideoText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŽµ Selecione uma rÃ¡dio lofi"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true" />

        </LinearLayout>

        <!-- Controle de Volume -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”Š"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <SeekBar
                android:id="@+id/volumeSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/teal_200"
                android:thumbTint="@color/teal_200" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:id="@+id/volumeText"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:minWidth="35dp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- OpÃ§Ãµes de Lives Lofi MELHORADAS-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ§ EstaÃ§Ãµes Lofi DisponÃ­veis: (Recomendado Lofi Radio)"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Grid de botÃµes de rÃ¡dio -->
    <GridLayout
        android:layout_width="match_parent"
